<div class="mt-4 mb-4">
    <div class="row row-gap-3">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4 ">
             <div class="card">
                <a href="/courses/{{this.slug}}" class="">
                    <img src="{{this.img}}" alt="card img" class="card-img-top">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" class="">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">
                        {{this.description}}
                    </p>
                    <a href="" class="btn btn-primary">Mua khoa hoc</a>
                </div>
             </div>
        </div>
         {{/each}}
    </div>
</div>